<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unifor.logingraphapitest.SecondActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFullNameId"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmailId"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBirthdayId"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGenderId"
        android:layout_margin="10dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserIdId"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Token: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTokenLabelId"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_margin="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/scrollViewTokenId"
        android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTokenId"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
    </ScrollView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewProfilePictureId"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/share"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:onClick="onClick"-->
        <!--android:text="Share Content" />-->

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/getPosts"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:onClick="onClick"-->
        <!--android:text="Posts"/>-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:text="Logout"
        android:id="@+id/buttonLogoutId"
        android:layout_margin="10dp" />

</LinearLayout>
